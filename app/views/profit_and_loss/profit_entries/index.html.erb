<p id="notice"><%= notice %></p>

<h1>Listing Profit Entries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ttc price in cents</th>
      <th>Information</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profit_entries.each do |profit_entry| %>
      <tr>
        <td><%= profit_entry.name %></td>
        <td><%= profit_entry.ttc_price_in_cents %></td>
        <td><%= profit_entry.information %></td>
        <td><%= link_to 'Show', profit_entry %></td>
        <td><%= link_to 'Edit', edit_profit_entry_path(profit_entry) %></td>
        <td><%= link_to 'Destroy', profit_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

